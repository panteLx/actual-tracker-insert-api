<%- include('partials/header', { title: 'Admin Panel', jsFile: 'adminPanel' })
%>
<body>
  <div id="loading" class="loading">
    <div class="spinner"></div>
  </div>
  <div class="container">
    <h1>Admin Panel</h1>

    <%- include('partials/user-info') %> <%- include('partials/tracker-switch',
    { navItems: navItems, currentPage: "panel" }) %><%-
    include('partials/alerts') %>

    <div class="admin-stats">
      <div class="stat-card">
        <h3>System Status</h3>
        <p>
          Debug Mode: <%= isDebugMode ? 'Eingeschaltet' : 'Ausgeschaltet' %>
        </p>
        <p>Environment: <%= NODE_ENV %></p>
      </div>
    </div>

    <div class="admin-controls">
      <button id="toggleDebugMode" class="button">
        <%= isDebugMode ? 'Debug Mode Auschalten' : 'Debug Mode Einschalten' %>
      </button>
    </div>
    <%- include('partials/footer') %>
  </div>
</body>
